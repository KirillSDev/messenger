{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "prettier",
        "plugin:react/recommended",
        "xo"
    ],
    "overrides": [
        {
            "extends": [
                "xo-typescript"
            ],
            "files": [
                "*.ts",
                "*.tsx"
            ]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unused-vars": 2,
        "max-len": [1, 100],
        "@typescript-eslint/no-unused-vars": 2,
        "no-throw-literal": "off",
        "no-underscore-dangle": "off",
        "class-methods-use-this": "off",
        "no-param-reassign": [
          "error",
          {
            "props": false
          }
        ],
        "@typescript-eslint/member-ordering": [
            "error",
            { "default": ["signature", "method", "constructor", "field"] }
          ]
    }
}
