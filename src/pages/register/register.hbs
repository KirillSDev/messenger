{{#extend "auth"}}
{{#content "main"}}
{{>input/input class="auth-form__line" text="Email" type="email" placeholder="sample@example.com"}}
{{>input/input class="auth-form__line" text="Username" type="text" placeholder="Enter Username"}}
{{>input/input class="auth-form__line" text="First Name" type="text" placeholder= "Enter your First Name"}}
{{>input/input class="auth-form__line" text="Last Name" type="text" placeholder="Enter your Last Name"}}
{{>input/input class="auth-form__line" text="Phone" type="tel" placeholder="Mobile Number"}}
{{>input/input class="auth-form__line" text="Password" type="password" placeholder="********"}}
{{>input/input class="auth-form__line" text="Confirm Password" type="password" placeholder="********"}}
{{/content}}
{{#content "footer"}}
{{>button/button text="Create account" class="auth-form__register-button" link="../profile/profile.hbs"}}
{{>link/link text="Already have an account?" class="auth-form__register-link" link="../../index.hbs"}}
{{/content}}
{{/extend}}